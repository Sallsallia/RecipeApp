<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salsalia.salsalia.view.fragments.AllRecipesFragment">

    <!-- membuat layout untuk menampilkan data menu yang favourite dengan -->
    <!-- recyclerview -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fav_dishes_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- membuat tulisan "belum ada resep untuk kategori ini apabila data "-->
    <!-- apabila data tidak ada-->
    <!-- menggunakan text view dengan ukuran font 16 sp, tulisan di sembunyikan efek dari-->
    <!-- visibility gone-->
    <TextView
        android:id="@+id/tv_no_fav_dishes_added_yet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/label_no_dishes_added_yet"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    <!--END-->